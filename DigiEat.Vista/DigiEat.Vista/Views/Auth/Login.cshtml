@model Digieat.Negocio.Cliente
@{
    ViewBag.Title = "Login";
}

<h2>Ingresa tus credenciales</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(c=>c.CORREO, "Correo Electrónico")
    @Html.TextBoxFor(c=>c.CORREO, new { type = "email" })
    <br />
    @Html.LabelFor(c=>c.CONTRASEÑA, "Contraseña")
    @Html.PasswordFor(c=>c.CONTRASEÑA)
    <br />

    <button>Ingresar </button>
}

@TempData["mensaje"]