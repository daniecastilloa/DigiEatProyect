@model Digieat.Negocio.Cliente
@{
    ViewBag.Title = "Login";
}
<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 10px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
    }

        .button:hover {
            background-color: #f44336;
            color: white;
        }
</style>
<div style="background-color:black" class=" text-white text-center">
<h2 style="color: white">Ingresa tus credenciales</h2>
@Html.ValidationSummary()


@using (Html.BeginForm())
{
    @Html.LabelFor(c=>c.correo, "Correo Electrónico")
    @Html.TextBoxFor(c=>c.correo, new { type = "email" })
    <br />
    @Html.LabelFor(c=>c.contrasena, "Contraseña")
    @Html.PasswordFor(c=>c.contrasena)
    <br />

    <button class="button button">Ingresar </button>
}

@TempData["mensaje"]
    </div>