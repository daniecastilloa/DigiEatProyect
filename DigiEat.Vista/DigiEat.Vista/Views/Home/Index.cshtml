
@{
    ViewBag.Title = "Index";
}

<!-- Header-->
<header class="text-white">
    <div class="container px-4 text-center"><br />
        <h1 class="fw-bolder">Bienvenido al Restaurante Siglo XXI</h1>
        <p class="lead">Plataforma Web</p>
    </div>
</header>
<!--El Carrousel-->
<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <div align="center"><img src="~/lib/img/mote.jpg" class="d-block w-75" alt="..."></div>
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:white;">Mote con Huesillo</h5>
                <p style="color:white;">Un rico refresco para apalear las temperaturas</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <div align="center"><img src="~/lib/img/cazuela.jpg" class="d-block w-75" alt="..."></div>
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:white;">Cazuela</h5>
                <p style="color:white;">El típico plato para comer en todo momento</p>
            </div>
        </div>
        <div class="carousel-item">
            <div align="center"><img src="~/lib/img/pastel.jpg" class="d-block w-75" alt="..."></div>
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:white;">Pastel de papas</h5>
                <p style="color:white;">Una exquisitez culinaria a su mesa</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>